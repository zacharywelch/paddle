<div class='navbar fill-white keyline-bottom col-sm-12 animate clearfix'>
  <div class='container-fluid contain'>
    <nav class='col-sm-12 text-right pad1y contain clearfix noprint'>
      <a class='logo pad1y pull-left text-left' href='/'>Paddle</a>

      <div class='primary small strong row2'>
        <a href='#dropdown' class='visible-xs authmenu keyline-all droplink 
          quiet round animate pull-right center'>
          <i class='icon icon-list'></i>
        </a>

        <% if signed_in? %>
          <a href='#dropdown' class='hidden-xs authmenu droplink quiet pad1 block round animate pull-right'>
            <%= image_tag current_user.avatar_url, class: 'avatar round' %>
            <%= current_user.first_name.downcase %>
          </a>
        <% end %>

        <div class='dropdown fill-white keyline-all round animate'>
          <% if signed_in? %>
            <div class='profile contain keyline-bottom pad1'>
              <%= link_to user_path(current_user), class: 'profile-icon' do %>
                <%= image_tag current_user.avatar_url, class: 'avatar' %>
              <% end %>
              <%= link_to user_path(current_user), class: 'truncate' do %>
                <%= current_user.first_name %> <%= current_user.last_name %><br>
                <%= content_tag :span, class: 'quiet' do %>
                  (<%= current_user.nickname %>)
                <% end unless current_user.nickname.blank? %>
              <% end %>
            </div>
            <div class='keyline-bottom pad1'>
              <%= link_to 'Account', edit_user_path(current_user) %>
              <%= link_to 'Sign Out', signout_path, method: "delete" %>
            </div>
          <% else %>
            <div class='pad1'>
              <%= link_to 'Sign In', signin_path %>
            </div>
          <% end %>
        </div><!-- ./dropdown -->   
      </div><!-- ./primary -->       

    </nav>

  </div>
</div><!-- ./navbar -->
